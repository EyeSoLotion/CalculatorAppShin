<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_onSurfaceVariant"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <EditText
        android:id="@+id/inputText"
        android:layout_width="262dp"
        android:layout_height="57dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:gravity="right"
        android:hint="@string/input_name"
        android:inputType="number"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/answerText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/answerText"
        android:layout_width="262dp"
        android:layout_height="57dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="568dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:enabled="false"
        android:gravity="right"
        android:hint="@string/answer_name"
        android:inputType="text"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="@dimen/operatorWidth"
        android:layout_height="@dimen/operatorHeight"
        android:layout_marginStart="12dp"
        android:backgroundTint="@color/md_theme_dark_inversePrimary"
        android:insetBottom="4dp"
        android:text="+"
        android:textSize="@dimen/textSize"
        app:cornerRadius="15dp"
        app:layout_constraintStart_toEndOf="@+id/subButton"
        tools:layout_editor_absoluteY="267dp" />

    <Button
        android:id="@+id/multButton"
        android:layout_width="@dimen/operatorWidth"
        android:layout_height="@dimen/operatorHeight"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/md_theme_dark_inversePrimary"
        android:insetBottom="4dp"
        android:text="X"
        android:textSize="@dimen/textSize"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toStartOf="@+id/divButton"
        tools:layout_editor_absoluteY="267dp" />

    <Button
        android:id="@+id/divButton"
        android:layout_width="@dimen/operatorWidth"
        android:layout_height="@dimen/operatorHeight"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/md_theme_dark_inversePrimary"
        android:insetBottom="4dp"
        android:text="/"
        android:textSize="@dimen/textSize"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="267dp" />

    <Button
        android:id="@+id/subButton"
        android:layout_width="@dimen/operatorWidth"
        android:layout_height="@dimen/operatorHeight"
        android:layout_marginStart="56dp"
        android:backgroundTint="@color/md_theme_dark_inversePrimary"
        android:insetBottom="4dp"
        android:text="-"
        android:textSize="@dimen/textSize"
        app:cornerRadius="15dp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="267dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_onSurfaceVariant"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <EditText
        android:id="@+id/inputText"
        android:layout_width="262dp"
        android:layout_height="57dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:gravity="right"
        android:hint="@string/input_name"
        android:inputType="number"
        android:textColor="@color/md_theme_light_background"
        android:textColorHint="@color/md_theme_light_background"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/answerText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/answerText"
        android:layout_width="262dp"
        android:layout_height="57dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="568dp"
        android:backgroundTint="#FFFFFF"
        android:ems="10"
        android:enabled="false"
        android:gravity="right"
        android:hint="@string/answer_name"
        android:inputType="text"
        android:textColor="@color/md_theme_light_background"
        android:textColorHint="@color/md_theme_light_background"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/divButton"
        android:layout_width="@dimen/operatorWidth"
        android:layout_height="@dimen/operatorHeight"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/md_theme_dark_inversePrimary"
        android:insetBottom="4dp"
        android:text="/"
        android:textSize="@dimen/textSize"
        app:cornerRadius="@dimen/cornerRadius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerText" />

    <Button
        android:id="@+id/subButton"
        android:layout_width="@dimen/operatorWidth"
        android:layout_height="@dimen/operatorHeight"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/md_theme_dark_inversePrimary"
        android:insetBottom="4dp"
        android:text="-"
        android:textSize="@dimen/textSize"
        app:cornerRadius="@dimen/cornerRadius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerText" />

    <Button
        android:id="@+id/multButton"
        android:layout_width="@dimen/operatorWidth"
        android:layout_height="@dimen/operatorHeight"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/md_theme_dark_inversePrimary"
        android:insetBottom="4dp"
        android:text="X"
        android:textSize="@dimen/textSize"
        app:cornerRadius="@dimen/cornerRadius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.654"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerText" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="@dimen/operatorWidth"
        android:layout_height="@dimen/operatorHeight"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/md_theme_dark_inversePrimary"
        android:insetBottom="4dp"
        android:text="+"
        android:textSize="@dimen/textSize"
        app:cornerRadius="@dimen/cornerRadius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerText" />

    <Button
        android:id="@+id/buttonOne"
        android:layout_width="101dp"
        android:layout_height="96dp"
        android:layout_marginTop="352dp"
        android:backgroundTint="@color/md_theme_light_outline"
        android:insetBottom="4dp"
        android:text="1"
        android:textSize="@dimen/textSizeNumerics"
        app:cornerRadius="@dimen/cornerRadius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerText" />

    <Button
        android:id="@+id/buttonThree"
        android:layout_width="101dp"
        android:layout_height="96dp"
        android:layout_marginTop="352dp"
        android:backgroundTint="@color/md_theme_light_outline"
        android:insetBottom="4dp"
        android:text="3"
        android:textSize="@dimen/textSizeNumerics"
        app:cornerRadius="@dimen/cornerRadius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerText" />

    <Button
        android:id="@+id/buttonSix"
        android:layout_width="101dp"
        android:layout_height="96dp"
        android:layout_marginTop="244dp"
        android:backgroundTint="@color/md_theme_light_outline"
        android:insetBottom="4dp"
        android:text="6"
        android:textSize="@dimen/textSizeNumerics"
        app:cornerRadius="@dimen/cornerRadius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerText" />

    <Button
        android:id="@+id/buttonFive"
        android:layout_width="101dp"
        android:layout_height="96dp"
        android:layout_marginTop="244dp"
        android:backgroundTint="@color/md_theme_light_outline"
        android:insetBottom="4dp"
        android:text="5"
        android:textSize="@dimen/textSizeNumerics"
        app:cornerRadius="@dimen/cornerRadius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerText" />

    <Button
        android:id="@+id/buttonTwo"
        android:layout_width="101dp"
        android:layout_height="96dp"
        android:layout_marginTop="352dp"
        android:backgroundTint="@color/md_theme_light_outline"
        android:insetBottom="4dp"
        android:text="2"
        android:textSize="@dimen/textSizeNumerics"
        app:cornerRadius="@dimen/cornerRadius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerText" />

    <Button
        android:id="@+id/ButtonZero"
        android:layout_width="101dp"
        android:layout_height="63dp"
        android:layout_marginTop="456dp"
        android:backgroundTint="@color/md_theme_light_outline"
        android:insetBottom="4dp"
        android:text="0"
        android:textSize="30sp"
        app:cornerRadius="@dimen/cornerRadius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerText" />

    <Button
        android:id="@+id/pointButton"
        android:layout_width="101dp"
        android:layout_height="63dp"
        android:layout_marginTop="456dp"
        android:backgroundTint="@color/md_theme_dark_inversePrimary"
        android:insetBottom="4dp"
        android:text="."
        android:textSize="@dimen/textSize"
        app:cornerRadius="@dimen/cornerRadius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerText" />

    <Button
        android:id="@+id/equalButton"
        android:layout_width="101dp"
        android:layout_height="63dp"
        android:layout_marginTop="456dp"
